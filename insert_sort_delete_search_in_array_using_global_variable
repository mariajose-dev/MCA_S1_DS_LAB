#include <stdio.h>

int a[5], pos=-1;

void insert(int e)
{
if (pos+1==5)
printf("****Error: Array is Full****");
else
a[++pos]=e;
}

int search(int s)
{
int i;
for(i=0;i<=pos;i++)
{
if(a[i]==s)
return 1;
}
return 0;
}

void sort()
{
int i;
int temp;
int j;
for(i=0;i<=pos;i++)
{
for(j=i+1;j<=pos;j++)
{
if(a[i]>a[j])
{
temp=a[i];
a[i]=a[i+1];
a[i+1]=temp;
}
}
}

printf("\n**Sorting sucessfull press 5 to view it**");

}

void delete()
{
if(pos==-1)
printf("Error: Array is empty");
else
printf("Deleted value is:\n%d",a[pos--]);
}



int menu()
{
int ch;
printf("\nINSERT-1\nSEARCH-2\nDELETE-3\nSORT-4\nDISPLAY ARRAY-5\nEXIT-6\nEnter your choice: ");
scanf("%d",&ch);
return ch;
}

void display()
{
printf("Array is:\n");
int i;
for(i=0;i<=pos;i++)
{
printf("%d\t",a[i]);
}
printf("\n");
}

void processArray()
{
int ch;
for(ch=menu();ch!=6;ch=menu())
{
switch(ch)
{
case 1:
printf("Enter the value to insert: ");
scanf("%d",&ch);
insert(ch);
break;
case 2:
printf("enter element to search: ");
scanf("%d",&ch);
int i=search(ch);
if(i==1)
printf("Element found in Array");
else
printf("Element not in array");
break;
case 3:
delete();
break;
case 4:
sort();
break;
case 5:
display();
break;
default:
printf("***Error: wrong choice***");
break;
}
}
}

int main()
{
processArray();
return 0;
}
