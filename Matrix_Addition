//Program to add 2 matrices@Maria Jose

#include<stdio.h>
#define size 5

void main()
{
	int A[size][size],B[size][size],res[size][size],m,n,p,q,i,j;
	printf("Addition of 2 matrices\n------------------------------\n");
	
	printf("\nEnter order of matrix A: ");
	scanf("%d%d",&m,&n);
	
	if(m<=size && n<=size)
		{
			printf("\nEnter elements of matrix A\n");
			for(i=0;i<m;i++)
			{
				for(j=0;j<n;j++)
				{
					printf("A[%d][%d]=",i,j);
					scanf("%d",&A[i][j]);
				}
			}
		}
	else
		printf("\n!!Order of matrix A should be between 1 to 5!!\n");
		
	printf("\nEnter order of matrix B: ");
	scanf("%d%d",&p,&q);
	
	if(p<=size && q<=size)
		{
			printf("\nEnter elements of matrix B\n");
			for(i=0;i<p;i++)
			{
				for(j=0;j<q;j++)
				{
					printf("B[%d][%d]=",i,j);
					scanf("%d",&B[i][j]);
				}
			}
		}
	else
		printf("\n!!Order of matrix B should be between 1 to 5!!\n");
		

	
	printf("\nMatrix A\n");
			for(i=0;i<m;i++)
			{
				for(j=0;j<n;j++)
				{
					printf("%d\t",A[i][j]);
				}
				printf("\n");
			}
			
	printf("\nMatrix B\n");
			for(i=0;i<p;i++)
			{
				for(j=0;j<q;j++)
				{
					printf("%d\t",B[i][j]);
				}
				printf("\n");
			}
		
	if(m==p && n==q)
		{
			//matrix addition code
			for(i=0;i<m;i++)
			{
				for(j=0;j<n;j++)
				{
					res[i][j]=A[i][j]+B[i][j];
				}
			}
			printf("\nResultant matrix after addition of matrix A and B is\n");
			for(i=0;i<m;i++)
			{
				for(j=0;j<n;j++)
				{
					printf("%d\t",res[i][j]);
				}
				printf("\n");
			}
			
		}
	else
		printf("\n!!Order of matrices A and B should be same, so cannot perform addition of 2 matrices!!");
}
