#include <stdio.h>

int a[5], pos=-1;

void insert(int e)
{
if (pos+1==5)
printf("****Error: Array is Full****");
else
a[++pos]=e;
}

void delete()
{
if(pos==-1)
printf("Error: Array is empty");
else
printf("Deleted value is:\n%d",a[pos--]);
}

int menu()
{
int ch;
printf("\nINSERT-1\nDELETE-2\nDISPLAY ARRAY-3\nEXIT-4\nEnter your choice: ");
scanf("%d",&ch);
return ch;
}

void display()
{
printf("Array is:\n");
int i;
for(i=0;i<=pos;i++)
{
printf("%d\t",a[i]);
}
printf("\n");
}

void processArray()
{
int ch;
for(ch=menu();ch!=4;ch=menu())
{
switch(ch)
{
case 1:
printf("Enter the value to insert: ");
scanf("%d",&ch);
insert(ch);
break;
case 2:
delete();
break;
case 3:
display();
break;
default:
printf("***Error: wrong choice***");
break;
}
}
}

int main()
{
processArray();
return 0;
}
